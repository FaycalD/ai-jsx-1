{
  "extends": "@tsconfig/node18/tsconfig.json",
  "compilerOptions": {
    "strict": true,
    "noEmitOnError": true,
    "forceConsistentCasingInFileNames": true,
    "skipLibCheck": true,
    "module": "esnext",
    "moduleResolution": "node16",
    "jsx": "react",
    "esModuleInterop": true,
    "outDir": "dist",
    "declaration": true,
    "lib": ["dom", "dom.iterable", "ES2022"]
  },
  "include": ["src/*", ".eslintrc.cjs"],
  "exclude": []
}
